@model ModelGame.tblAccount

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Bangers&display=swap');

        @@keyframes neon {
            0% {
                text-shadow: -1px -1px 1px var(--shadow-color-light), -1px 1px 1px var(--shadow-color-light), 1px -1px 1px var(--shadow-color-light), 1px 1px 1px var(--shadow-color-light), 0 0 3px var(--shadow-color-light), 0 0 10px var(--shadow-color-light), 0 0 20px var(--shadow-color-light), 0 0 30px var(--shadow-color), 0 0 40px var(--shadow-color), 0 0 50px var(--shadow-color), 0 0 70px var(--shadow-color), 0 0 100px var(--shadow-color), 0 0 200px var(--shadow-color);
            }

            50% {
                text-shadow: -1px -1px 1px var(--shadow-color-light), -1px 1px 1px var(--shadow-color-light), 1px -1px 1px var(--shadow-color-light), 1px 1px 1px var(--shadow-color-light), 0 0 5px var(--shadow-color-light), 0 0 15px var(--shadow-color-light), 0 0 25px var(--shadow-color-light), 0 0 40px var(--shadow-color), 0 0 50px var(--shadow-color), 0 0 60px var(--shadow-color), 0 0 80px var(--shadow-color), 0 0 110px var(--shadow-color), 0 0 210px var(--shadow-color);
            }

            100% {
                text-shadow: -1px -1px 1px var(--shadow-color-light), -1px 1px 1px var(--shadow-color-light), 1px -1px 1px var(--shadow-color-light), 1px 1px 1px var(--shadow-color-light), 0 0 3px var(--shadow-color-light), 0 0 10px var(--shadow-color-light), 0 0 20px var(--shadow-color-light), 0 0 30px var(--shadow-color), 0 0 40px var(--shadow-color), 0 0 50px var(--shadow-color), 0 0 70px var(--shadow-color), 0 0 100px var(--shadow-color), 0 0 200px var(--shadow-color);
            }
        }

        :root {
            --shadow-color: #FF9E9E;
            --shadow-color-light: white;
        }

        body {
            background: rgb(238,174,202);
            background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        }

        form {
            width: 300px;
            padding: 40px;
            position: absolute;
            border-radius: 24px;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            text-align: center;
            overflow: hidden;
            background-image: linear-gradient(to right, rgba(255,0,0,0), #0d4256);
            box-shadow: 0 5px 15px rgba(0,0,0,.5);
        }

            form h4 {
                text-align: center;
                font-family: 'Bangers', cursive;
                color: #241b5f;
                font-size: 1.5em;
                /*animation: neon 3s infinite;*/
            }

            form label {
                text-align: center;
                font-family: 'Bangers', cursive;
                color: #241b5f;
            }

            form input[type="text"], input[type="password"] {
                border: 0;
                background: none;
                display: block;
                margin: 5px auto;
                text-align: center;
                border: 2px solid #3498db;
                padding: 14px 10px;
                background: aquamarine;
                width: 200px;
                outline: none;
                color: black;
                border-radius: 24px;
                transition: 0.25s;
                font-family: 'Bangers', cursive;
            }

                input[type="text"]:focus, input[type="password"]:focus {
                    width: 280px;
                    border-color: #2ecc71;
                }

            form input[type="submit"] {
                text-align: center;
                border: 2px solid #2ecc71;
                color: #e9dfdf;
                font-weight: bold;
                border-radius: 24px;
                transition: 0.25s;
                padding: 14px 20px;
                background: darkslateblue;
                font-family: 'Bangers', cursive;
            }

            form input[type="reset"] {
                text-align: center;
                border: 2px solid #2ecc71;
                color: #e9dfdf;
                font-weight: bold;
                border-radius: 24px;
                transition: 0.25s;
                padding: 14px 35px;
                background: darkslateblue;
                cursor: pointer;
                font-family: 'Bangers', cursive;
            }

            form input[type="submit"]:hover {
                background: #667523;
            }

            form input[type="reset"]:hover {
                background: #667523;
            }

        .message {
            /*margin-top: 10px;*/
            /*text-align: center;*/
            font-family: 'Bangers', cursive;
            text-decoration: none;
            list-style-type: none;
            color: #df2173;
        }

            .message ul li {
                list-style-type: none;
            }
    </style>
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>QUẢN LÝ TRÒ CHƠI TRÚC XANH</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.nameAccount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameAccount, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.nameAccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-default" />
                <input type="reset" value="Hủy" class="btn btn-default" />
            </div>
        </div>
        <div class="message">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>     
    </div>
    }
</body>
</html>
