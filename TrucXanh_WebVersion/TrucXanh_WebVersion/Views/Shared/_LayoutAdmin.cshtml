            }

                .updateLevel-content input[type="button"]:hover {
                    background: #D2DA50;
                }

            .updateLevel-content .close {
                color: red;
                float: right;
                font-size: 50px;
                font-weight: bold;
            }

                .updateLevel-content .close:hover,
                .updateLevel-content .close:focus {
                    color: black;
                    text-decoration: none;
                    cursor: pointer;
                }

        .removeLevel-content {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
            margin-top: 100px;
            width: 400px;
            margin-left: 370px;
            height: 200px;
            padding: 20px;
            border-radius: 24px;
            width: 50%;
            background-repeat: no-repeat;
            background-size: cover;
            text-align: center;
        }

            .removeLevel-content h2 {
                font-family: 'Bangers', cursive;
                color: hsl(50, 50%, 50%);
                position: relative;
                z-index: 2;
                font-size: 3em;
                margin-left: 0%;
                letter-spacing: 0px;
                text-transform: uppercase;
                text-shadow: 1px 1px hsl(50, 50%, 45%), 2px 2px hsl(50, 50%, 40%), 3px 3px hsl(50, 50%, 35%), 4px 4px hsl(50, 50%, 34%), 5px 5px hsl(50, 50%, 33%), 6px 6px hsl(50, 50%, 32%), 7px 7px hsl(50, 50%, 31%), 8px 8px hsl(50, 50%, 30%), 9px 9px hsl(50, 50%, 29%), 10px 10px hsl(50, 50%, 28%), 10px 10px 30px rgba(0,0,0,.7);
            }

            .removeLevel-content input[type="button"] {
                border: 0;
                display: block;
                border: 2px solid #2ecc71;
                padding: 14px 40px;
                outline: none;
                color: black;
                font-weight: bold;
                border-radius: 24px;
                transition: 0.25s;
                background: #2ecc71;
                cursor: pointer;
                font-family: 'Bangers', cursive;
                margin-left: 40%;
                margin-top: 40px;
            }

            .removeLevel-content .close {
                color: red;
                float: right;
                font-size: 50px;
                font-weight: bold;
            }

                .removeLevel-content .close:hover,
                .removeLevel-content .close:focus {
                    color: black;
                    text-decoration: none;
                    cursor: pointer;
                }
    </style>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div class="top-title">
        <a>Trò chơi trúc xanh</a>
    </div>
    <div class="col-md-12">
        <div class="col-md-3" id="menu">
            <div class="slidebar_menu">
                <div class="menu_function">
                    <ul>
                        <li>
                            <div class="admin">
                                <img src="~/Image/manger.jpg" style="height:50px; width:50px;" />
                                Xin chào: @Session["admin"]
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("getListImage","_image")">
                                Quản lý hình ảnh
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("getListLevel","_level")">
                                Quản lý màn chơi
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout","_admin")">
                                Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8" id="mainContent">
            @RenderBody()
        </div>
    </div>
</body>
</html>
<script>
    $("#btnAddImage").click(function () {
        var modal = document.getElementById("add-image")
        modal.style.display = "block";
    })
    $("#spanClose").click(function () {
        console.log("click");
        var modal = document.getElementById("add-image")
        modal.style.display = "none";
    })
    $("#image").change(function () {
        var input = document.getElementById("image")
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#imgShow').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    })
    $("#spanCloseRemove").click(function () {
        console.log("click");
        var modal = document.getElementById("remove-image")
        modal.style.display = "none";
    })
</script>
