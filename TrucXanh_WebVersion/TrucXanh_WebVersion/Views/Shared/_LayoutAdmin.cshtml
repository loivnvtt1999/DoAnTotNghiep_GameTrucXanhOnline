<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Bangers&display=swap');

        body {
            background: rgb(238,174,202);
            background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        }

        .top-title {
            border-radius: 24px;
            width: 100%;
            height: 100px;
            text-align: center;
            background-image: linear-gradient(to right, rgba(255,0,0,0), #0d4256);
            box-shadow: 0 5px 15px rgba(0,0,0,.5);
        }

            .top-title a {
                text-decoration: none;
                position: absolute;
                top: 30px;
                text-align: center;
                font-family: 'Bangers', cursive;
                color: #241b5f;
                font-size: 2em;
                text-transform: uppercase;
                transform: rotate(-10deg);
                text-shadow: 1px 1px hsl(50, 50%, 45%), 2px 2px hsl(50, 50%, 40%), 3px 3px hsl(50, 50%, 35%), 4px 4px hsl(50, 50%, 34%), 5px 5px hsl(50, 50%, 33%), 6px 6px hsl(50, 50%, 32%), 7px 7px hsl(50, 50%, 31%), 8px 8px hsl(50, 50%, 30%), 9px 9px hsl(50, 50%, 29%), 10px 10px hsl(50, 50%, 28%), 10px 10px 30px rgba(0,0,0,.7);
            }

        .mainbox {
            width: 100%;
            height: 100%;
            border: 1px solid;
        }

        #menu {
            margin: 20px auto;
        }

        #mainContent {
            margin-left: 10px;
            margin-top: 10px;
        }

        .slidebar_menu {
            position: fixed;
            height: 100vh;
            width: 280px;
            background: rgba(255,255,255,0.1);
            box-shadow: 0 0 6px rgba(255,255,255,0.5);
        }

            .slidebar_menu .menu_function {
                position: absolute;
                width: 100%;
            }

                .slidebar_menu .menu_function li {
                    padding: 14px 20px;
                    transition: all 0.3s linear;
                    list-style-type: none;
                }

                    .slidebar_menu .menu_function li a {
                        color: #008080;
                        font-size: 25px;
                        text-decoration: none;
                        font-weight: bold;
                        font-family: 'Bangers', cursive;
                    }

                    .slidebar_menu .menu_function li .admin {
                        color: #008080;
                        font-size: 25px;
                        text-decoration: none;
                        font-weight: bold;
                        font-family: 'Bangers', cursive;
                    }

                    .slidebar_menu .menu_function li:hover {
                        border-left: 1px solid #fff;
                        box-shadow: 0 0 4px rgba(255,255,255,0.5);
                    }

        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        .modalImage-content {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
            margin-top: 200px;
            width: 600px;
            margin-left: 370px;
            height: 350px;
            padding: 20px;
            border-radius: 24px;
            width: 50%;
            background-repeat: no-repeat;
            background-size: cover;
            text-align: center;
        }

            .modalImage-content input[type="file"] {
                border: 0;
                background: none;
                display: block;
                margin: 40px auto;
                text-align: center;
                border: 2px solid #3498db;
                padding: 14px 10px;
                background: aquamarine;
                width: 200px;
                outline: none;
                color: black;
                border-radius: 24px;
                transition: 0.25s;
                font-family: 'Bangers', cursive;
            }

                .modalImage-content input[type="file"]:focus {
                    width: 280px;
                    border-color: #2ecc71;
                }

            .modalImage-content input[type="button"] {
                border: 0;
                display: block;
                margin-left: 30px;
                text-align: center;
                border: 2px solid #2ecc71;
                padding: 14px 40px;
                outline: none;
                color: black;
                font-weight: bold;
                border-radius: 24px;
                transition: 0.25s;
                background: #2ecc71;
                cursor: pointer;
                float: left;
                font-family: 'Bangers', cursive;
                margin-left: 42%;
            }

                .modalImage-content input[type="button"]:hover {
                    background: #D2DA50;
                }

            .modalImage-content .close {
                color: red;
                float: right;
                font-size: 50px;
                font-weight: bold;
            }

                .modalImage-content .close:hover,
                .modalImage-content .close:focus {
                    color: black;
                    text-decoration: none;
                    cursor: pointer;
                }

        .removeImage-content {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
            margin-top: 200px;
            width: 600px;
            margin-left: 370px;
            height: 350px;
            padding: 20px;
            border-radius: 24px;
            width: 50%;
            background-repeat: no-repeat;
            background-size: cover;
            text-align: center;
        }

            .removeImage-content input[type="button"] {
                border: 0;
                display: block;
                margin-left: 30px;
                text-align: center;
                border: 2px solid #2ecc71;
                padding: 14px 40px;
                outline: none;
                color: black;
                font-weight: bold;
                border-radius: 24px;
                transition: 0.25s;
                background: #2ecc71;
                cursor: pointer;
                font-family: 'Bangers', cursive;
                margin-left: 40%;
                margin-top: 50px;
            }

                .removeImage-content input[type="button"]:hover {
                    background: #D2DA50;
                }

            .removeImage-content .close {
                color: red;
                float: right;
                font-size: 50px;
                font-weight: bold;
            }

                .removeImage-content .close:hover,
                .removeImage-content .close:focus {
                    color: black;
                    text-decoration: none;
                    cursor: pointer;
                }

        .addLevel-content {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
