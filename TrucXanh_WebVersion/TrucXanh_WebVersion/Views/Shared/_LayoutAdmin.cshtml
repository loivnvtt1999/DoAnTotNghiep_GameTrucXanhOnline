            }

                .addLevel-content .close:hover,
                .addLevel-content .close:focus {
                    color: black;
                    text-decoration: none;
                    cursor: pointer;
                }

        .updateLevel-content {
            background: rgb(2,0,36);
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
            margin-top: 100px;
            width: 600px;
            margin-left: 370px;
            height: 520px;
            padding: 20px;
            border-radius: 24px;
            width: 50%;
            background-repeat: no-repeat;
            background-size: cover;
            text-align: center;
        }

            .updateLevel-content form {
                width: 300px;
                position: fixed;
                border-radius: 24px;
                margin-top: 16%;
                margin-left: 400px;
                transform: translate(-50%,-50%);
                text-align: center;
                overflow: hidden;
                height: auto;
                background: rgba(255,255,255,0.1);
                box-shadow: 0 0 6px rgba(255,255,255,0.5);
            }

            .updateLevel-content input[type="number"] {
                border: 0;
                background: none;
                display: block;
                margin: 5px auto;
                text-align: center;
                border: 2px solid #3498db;
                padding: 14px 10px;
                background: aquamarine;
                width: 250px;
                outline: none;
                color: black;
                border-radius: 24px;
                font-size: 20px;
                font-family: 'Bangers', cursive;
            }

            .updateLevel-content label {
                color: #241b5f;
                font-size: 20px;
                font-family: 'Bangers', cursive;
            }

            .updateLevel-content input[type="number"]:focus {
