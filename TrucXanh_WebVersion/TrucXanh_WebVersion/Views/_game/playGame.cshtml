    let checkWinGame = false;
    var startingMinutes;
    var startingSeconds;
    var time;
    var countDownEl;
    var countScoreEl;
    var countTimeGame;
    var table;
    var nameLevel;
    var idLevel;
    var row;
    var col;
    var scoreRange;
    var countScore;
    var showScoreEl;
    var downButton;
